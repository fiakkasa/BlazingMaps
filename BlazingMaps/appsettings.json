{
  "AddressLookupUrl": "https://nominatim.openstreetmap.org/search?format=json&q=",
  // @see https://github.com/fis-sst/BlazorMaps
  "MapOptions": {
    "DivId": "map",
    "Center": {
      "Lat": 35.185566,
      "Lng": 33.382275
    },
    "Zoom": 13,
    "ZoomOnSelection":  17,
    "UrlTileLayer": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
    "SubOptions": {
      "Attribution": "&copy; <a href=\"http://www.openstreetmap.org/copyright\" target=\"_blank\">OpenStreetMap</a>",
      "TileSize": 256,
      "ZoomOffset": 0,
      "MaxZoom": 19
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
